.content-window{
    width: 100%;
}

.btspeech{
    display: block;
    cursor: pointer;
    margin: 100px auto;
    width: 300px;
    height: 80px;
    line-height: 80px;
    font-size: 14px;
    font-weight: bold;
    color: #fff;
    background-color: #a1c023;
    transition-animate(all, .2s, 'out-circ', 0);

    &.started{
        background-color: #c10b0b;

        &:hover{
            background-color: #8d1616;
        }
    }

    &:hover{
        background-color: #859c27;
    }
}

#text{
    text-align: center;
    font-size: 16px;
    line-height: 26px;
    font-weight: bold;
    font-family: arial;
    color: #000;

    span{
        color: #999;
    }

    &.error{
        color: #c10b0b;
    }
}
