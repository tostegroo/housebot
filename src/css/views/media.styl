@import "common/*.styl";

@media only screen and (max-width: 1024px) {

	.mobile{
		display: block;
	}

	.desktop{
		display: none;
	}

	@import "mobile/*.styl";
}

@media only screen and (min-width: 1024px) {

	.mobile{
		display: none;
	}

	.desktop{
		display: block;
	}

	@import "desktop/*.styl";
}
